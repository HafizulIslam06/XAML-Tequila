<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XAMLTequila.MainPage">
    <Grid Margin="5">
        <!-- Define Grid Columns and Rows -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <BoxView Color="#D9D9D9" 
                 Grid.ColumnSpan="2"
                 HorizontalOptions="FillAndExpand"
                 VerticalOptions="FillAndExpand" 
                 CornerRadius="10"/>

        <!-- Table Number Section -->
        <Label Grid.Row="0"
               Grid.Column="0"
               Text="Table #"
               FontSize="50"
               FontAttributes="Bold"
               TextColor="#FAFAFA"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Margin="20,0"/>

        <!-- Menu Buttons Section -->
        <StackLayout Grid.Row="0"
                     Grid.Column="1"
                     Orientation="Horizontal"
                     HorizontalOptions="End"
                     VerticalOptions="Center"
                     Spacing="10">

            <!-- Split By Item Button -->
            <Frame BackgroundColor="#ACB8B4"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False"
                   WidthRequest="150"
                   HeightRequest="100"
                   BorderColor="Transparent"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <StackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="0">
                    <Label Text="SPLIT BY"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#000000"
                           HorizontalOptions="Center"/>
                    <Label Text="ITEM"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#000000"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>

            <!-- Split By Evenly Button -->
            <Frame BackgroundColor="#FFFFFF"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False"
                   WidthRequest="150"
                   HeightRequest="100"
                   BorderColor="Transparent"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <StackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="0">
                    <Label Text="SPLIT BY"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#000000"
                           HorizontalOptions="Center"/>
                    <Label Text="EVENLY"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#000000"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>

            <!-- Split By Seat Button -->
            <Frame BackgroundColor="#FFFFFF"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False"
                   WidthRequest="150"
                   HeightRequest="100"
                   BorderColor="Transparent"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <StackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="0">
                    <Label Text="SPLIT BY"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#000000"
                           HorizontalOptions="Center"/>
                    <Label Text="SEAT"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#000000"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>

            <!-- Edit Button -->
            <Frame BackgroundColor="#FFFFFF"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False"
                   WidthRequest="150"
                   HeightRequest="100"
                   BorderColor="Transparent"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <StackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Orientation="Horizontal"
                             Spacing="10">
                    <Label Text="EDIT"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#000000"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    <Image Source="file_edit.png"
                           HeightRequest="50" WidthRequest="50"
                           Aspect="AspectFit"/>
                </StackLayout>
            </Frame>

            <!-- Print Button -->
            <Frame BackgroundColor="#FFFFFF"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False"
                   WidthRequest="150"
                   HeightRequest="100"
                   BorderColor="Transparent"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <StackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Orientation="Horizontal"
                             Spacing="10">
                    <Label Text="PRINT"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#000000"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    <Image Source="file.png"
                           HeightRequest="50" WidthRequest="50"
                           Aspect="AspectFit"/>
                </StackLayout>
            </Frame>

            <!-- Print All Button -->
            <Frame BackgroundColor="#FFFFFF"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False"
                   WidthRequest="150"
                   HeightRequest="100"
                   BorderColor="Transparent"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <StackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Orientation="Horizontal"
                             Spacing="10">
                    <StackLayout Orientation="Vertical"
                                 HorizontalOptions="Center">
                        <Label Text="PRINT"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#000000"
                               HorizontalOptions="Center"/>
                        <Label Text="ALL"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#000000"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                    <Image Source="multipple_file.png"
                           HeightRequest="50" WidthRequest="50"
                           Aspect="AspectFit"/>
                </StackLayout>
            </Frame>

            <!-- Home Button -->
            <Frame BackgroundColor="#000000"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False"
                   WidthRequest="150"
                   HeightRequest="100"
                   BorderColor="Transparent"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="20,0">
                <Image Source="home.png"
                       HeightRequest="80" WidthRequest="80"
                       Aspect="AspectFit"/>
            </Frame>
        </StackLayout>

        <!-- Second Row Components in the X-Direction -->
        <StackLayout Grid.Row="1" 
                 Grid.ColumnSpan="2" 
                 Orientation="Horizontal"
                 Spacing="10">
            <!-- Add more components as needed -->
            <ScrollView Orientation="Horizontal">
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <!-- Screen 1 -->
                    <Frame BackgroundColor="White" Margin="10" Padding="10" CornerRadius="10">
                        <!-- Top -->
                        <StackLayout>
                            <Label Text="Check #: 1/4" TextColor="Black" FontSize="40" HorizontalTextAlignment="Center"/>

                            <StackLayout Orientation="Horizontal" Spacing="20">
                                <StackLayout>
                                    <Label Text="Server: Mary" FontSize="16" TextColor="Black"/>
                                    <Label Text="Cashier: TECH" FontSize="16" TextColor="Black"/>
                                    <Label Text="Ticket #: 52375" FontSize="20" TextColor="Black"/>
                                </StackLayout>

                                <StackLayout>
                                    <Label Text="Table p7" FontSize="32" TextColor="Black"/>
                                    <Label Text="4/26/2024 6:27 PM" FontSize="16" TextColor="Black"/>
                                    <Label Text="Palapa Wall" FontSize="20" TextColor="Black"/>
                                </StackLayout>
                            </StackLayout>

                            <!-- Dashed Line Divider -->
                            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Spacing="5">
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <BoxView Color="Transparent" HeightRequest="1" WidthRequest="0.5"/>
                                <BoxView Color="Gray" HeightRequest="1" WidthRequest="5"/>
                                <!-- Repeat as needed -->
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </Grid>
</ContentPage>
